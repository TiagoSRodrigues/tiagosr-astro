---
import { Picture } from "astro:assets";
import avatar from "src/assets/avatar.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={avatar}
      alt="Tiago S Rodrigues"
      widths={[200, 400, 600]}
      sizes="(max-width: 400px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="rounded-full" // or 'rounded-full' for a circle

    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Hi there! <br> I'm Tiago!
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      I believe that Engineering, is the art of solving problems!</br>My expertise encompasses project management, strategic planning, and innovative problem-solving.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://tiagosr.eu/about"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-map-alt" />
         my path
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/TiagoSRodrigues"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
         GitHub
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://www.linkedin.com/in/tiagosilvarodrigues"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-linkedin" />
         LinkedIn
      </Link>
    </div>
  </div>
</main>
