---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "assets/site-screenshot.png",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title 
  : "TiagoSR";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="public/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Tiago Silva Rodrigues personal page."
      canonical="https://tiagosr.eu"
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Tiago Silva Rodrigues | DevOps Eng`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "TiagoSR Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
